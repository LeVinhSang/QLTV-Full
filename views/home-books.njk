{% extends 'layout-home-books.njk' %}

{% block content %}

<section>
    <div style="
    margin-top: -50px;
    background-image: url(https://www.bma.org.uk/~/asset/4/29766.ashx?format=8|10000);
    -webkit-background-size: cover;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center center;
    width: 100%;
    height: 300px;
    ">
        <br><br><br><br><br><br><br>
        <div class="col-md-8 col-md-offset-2">
            <div  class="navbar navbar-expand-lg navbar-light bg-light">
                <input id="input_search" type="text" class="form-control" aria-label="Default"
                       aria-describedby="inputGroup-s"  placeholder="search...">
            </div>

        </div>
    </div>
</section>

<div class="modal fade" id="loginModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Create Book</h4>
            </div>
            <div class="modal-body">
                <div class="form-group" >
                    <div class="form-group">
                        <label>Account: </label><label style="color: red"> (*)</label>
                        <input class="form-control" id="user_name" placeholder="account...">
                    </div>
                    <div class="form-group">
                        <label>Password:</label><label style="color: red"> (*)</label>
                        <input class="form-control" type="password" id="password" placeholder="password...">
                    </div>

                    <button hidden type="submit" class="btn btn-primary" id="login">Login</button>
                    <label style="color: red">The (*) sign must not be left blank.</label>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <a href="/user/send-code" style="font:bold" >Forgot password</a>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div id="book" class="container-fluid">
    <div class="col-md-6 col-md-offset-3">
        <div class="panel-body">
            <section>
                <ul id="books-list" class="list-group">
                </ul>
            </section>
            <script id="bookTemplate" type="text/html">
                <ul class="list-group">
                    <li class="list-group-item list-group-item-action" id="get-detail" >
                        <p><img width="100px" height="100px" src=":bookImages:"/></p>
                        <p style="color: blue">:bookTitle:</p>
                        <p>:bookAuthor:      </p>
                        <p>:bookPublisher:   </p>
                        <p>:bookGenre:       </p>
                        <p>:bookPublished_in:</p>
                    </li>
                </ul>
            </script>
        </div>
    </div>
</div>
{% endblock %}
<script src="/javascript/home-books.js"></script>
