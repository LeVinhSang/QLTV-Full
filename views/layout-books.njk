<html>
<head>
    <title>{% block title %} {% endblock %}</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body {
            margin-top: 50px;
            background-color: #f9f9f9;
        }
        #navigator {
            transition: opacity 500ms;
            opacity: .7;
        }
        #navigator:hover {
            opacity: 1;
        }

        .avatar {
            vertical-align: middle;
            width: 50px;
            height: 50px;
            border-radius: 50%;
        }

    </style>
</head>
<body>

<header>
    <nav class="navbar navbar-fixed-top navbar-default" id="navigator">
        <div class="navbar-header">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed"
                        data-toggle="collapse"
                        data-target="#collapsedList"
                        aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a href="/" class="navbar-brand" id="home">Home</a>
            </div>
        </div>
        <div class="container-fluid">
            <div class="collapse navbar-collapse" id="collapsedList">
                <ul class="navbar-nav nav">
                    <li><a href="/" class="nav-link">Home</a></li>
                    <li><a id="search-books" href="/books" class="nav-link">Books</a></li>
                    <li><a data-toggle="modal"   data-target="#bookModal" href="#" class="nav-link">Create Book</a></li>
                    <li><a data-toggle="modal"   data-target="#publisherModal" href="#" class="nav-link">Create Publisher</a></li>
                </ul>
                <div  class="navbar-nav nav navbar-right">
                    <a class="dropdown" id="list-user">

                    </a>
                </div>
            </div>
        </div>
    </nav>
</header>
{% block content %}
{% endblock %}

</body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="/javascript/books.js"></script>
<script src="/javascript/borrowers.js"></script>

</html>