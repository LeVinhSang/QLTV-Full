<html>
<head>
    <title>{% block title %} {% endblock %}</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body {
            margin-top: 50px;
            background-color: #f9f9f9;
        }
        #navigator {
            transition: opacity 500ms;
            opacity: .7;
        }
        #navigator:hover {
            opacity: 1;
        }
    </style>
</head>
<body>

<header>
    <nav class="navbar navbar-fixed-top navbar-default" id="navigator">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed"
                    data-toggle="collapse"
                    data-target="#collapsedList"
                    aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="/logout" class="navbar-brand">Logout</a>
            <a href="/" class="navbar-brand">Home</a>
        </div>
        <div class="container-fluid">
            <div class="collapse navbar-collapse" id="collapsedList">
                <ul class="navbar-nav nav">
                    <li><a id="search-books" href="/books" class="nav-link">Books</a></li>
                    <li><a data-toggle="modal"   data-target="#bookModal" href="#" class="nav-link">Create Book</a></li>
                    <li><a data-toggle="modal"   data-target="#publisherModal" href="#" class="nav-link">Create Publisher</a></li>
                </ul>
                <div  class="navbar-form navbar-right" id="search">
                    <div class="input-group-prepend">
                    </div>
                    <input id="input_search" type="text" class="form-control" aria-label="Default"
                           aria-describedby="inputGroup-s"  placeholder="search...">
                    <i id="click-search-basic" style="margin-left: -3em" class="btn glyphicon glyphicon-search"></i>
                </div>
            </div>
        </div>
    </nav>
</header>
{% block content %}
{% endblock %}

</body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="/javascript/books.js"></script>

</html>